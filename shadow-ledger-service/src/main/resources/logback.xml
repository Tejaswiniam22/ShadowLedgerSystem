<configuration>

    <property name="SERVICE_NAME"
              value="${spring.application.name}"/>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level
                [%property{SERVICE_NAME}]
                [traceId=%X{traceId}]
                %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
